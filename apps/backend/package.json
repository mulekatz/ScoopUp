{
  "name": "scoopup-backend",
  "version": "0.0.1",
  "description": "TypeScript + Express API Server",
  "scripts": {
    "build": "swc src -d dist --config-file .swcrc",
    "start": "cross-env NODE_ENV=production node dist/src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "dev:prod": "cross-env NODE_ENV=production nodemon",
    "lint": "eslint --ignore-path .gitignore --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",

    "update-app-id": "npx ts-node -r tsconfig-paths/register src/utils/updateAppId.ts",
    "set-rewards": "npx ts-node -r tsconfig-paths/register src/utils/setRewards.ts",
    "trigger-cycle": "npx ts-node -r tsconfig-paths/register src/utils/triggerCycle.ts"

  },
  "dependencies": {
    "@repo/config-contract": "*",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.15",
    "@vechain/sdk-core": "^1.0.0-beta.30",
    "@vechain/sdk-network": "^1.0.0-beta.30",
    "cross-env": "^7.0.3",
    "axios": "^1.6.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "ethers": "^6.11.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "latlon-geohash": "^2.0.0",
    "morgan": "^1.10.0",
    "ngeohash": "^0.6.3",
    "node-config": "^0.0.2",
    "openai": "^4.28.0",
    "reflect-metadata": "^0.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typedi": "^0.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/latlon-geohash": "^2.0.3",
    "@types/morgan": "^1.9.9",
    "@types/ngeohash": "^0.6.8",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
